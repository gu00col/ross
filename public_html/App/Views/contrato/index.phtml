<script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>

<script>
    // A inicialização do gráfico é colocada aqui para garantir que rode após o DOM estar pronto
    // e dentro do escopo correto da página, evitando conflitos globais.
    const riskChartElement = document.getElementById('riskChart');
    if (riskChartElement) {
        const riskPercentage = parseInt(riskChartElement.getAttribute('data-risk-percentage'), 10) || 0;
        let chartColor;

        if (riskPercentage <= 33) {
            chartColor = '#28a745'; // Verde
        } else if (riskPercentage <= 66) {
            chartColor = '#ffc107'; // Amarelo
        } else {
            chartColor = '#dc3545'; // Vermelho
        }

        var options = {
            series: [riskPercentage],
            chart: {
                height: 250,
                type: 'radialBar',
            },
            plotOptions: {
                radialBar: {
                    hollow: { margin: 0, size: '65%' },
                    dataLabels: {
                        name: { show: false },
                        value: {
                            formatter: (val) => val + "%",
                            color: '#1A2D4F',
                            fontSize: '2.5rem',
                            fontWeight: '700',
                            offsetY: 10,
                            show: true,
                        }
                    }
                }
            },
            colors: [chartColor],
            stroke: { lineCap: 'round' },
            labels: ['Risco'],
        };

        var chart = new ApexCharts(riskChartElement, options);
        chart.render();
    }
</script>
