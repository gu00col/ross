# ===========================================
# CONFIGURAÇÕES GERAIS DO PROJETO ROSS
# ===========================================

# Nome do projeto
COMPOSE_PROJECT_NAME=ross

# ===========================================
# CONFIGURAÇÕES DO POSTGRESQL
# ===========================================
POSTGRES_DB=ross
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_PORT=5432
POSTGRES_HOST=postgresql

# ===========================================
# CONFIGURAÇÕES DO REDIS
# ===========================================
REDIS_PORT=6379
REDIS_HOST=redis

# ===========================================
# CONFIGURAÇÕES DO PHP-APACHE
# ===========================================
PHP_APACHE_PORT=8080
PHP_APACHE_DOCUMENT_ROOT=/var/www/html

# ===========================================
# CONFIGURAÇÕES DO N8N
# ===========================================
N8N_PORT=5678
N8N_HOST=localhost
N8N_PROTOCOL=http
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=admin123
N8N_WEBHOOK_URL=http://localhost:5678/
N8N_TIMEZONE=America/Sao_Paulo

# ===========================================
# CONFIGURAÇÕES DE BANCO PARA N8N
# ===========================================
N8N_DB_TYPE=postgresdb
N8N_DB_POSTGRESDB_HOST=postgresql
N8N_DB_POSTGRESDB_PORT=5432
N8N_DB_POSTGRESDB_DATABASE=ross
N8N_DB_POSTGRESDB_USER=postgres
N8N_DB_POSTGRESDB_PASSWORD=postgres123

# ===========================================
# CONFIGURAÇÕES DE VOLUMES
# ===========================================
POSTGRES_DATA_PATH=./postgresql/data
N8N_DATA_PATH=./n8n/data
PHP_WWW_PATH=../public_html
REDIS_DATA_VOLUME=redis_data

# ===========================================
# CONFIGURAÇÕES DE REDE
# ===========================================
NETWORK_NAME=ross-network
