<!-- Modal de Confirmação de Remoção de Contrato -->
<div class="modal fade" id="deleteContractModal" tabindex="-1" aria-labelledby="deleteContractModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteContractModalLabel">Remover Contrato</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="deleteContractForm" action="/delete_contract" method="POST">
                    <input type="hidden" name="contrato_id" id="deleteContratoId" value="">
                    <input type="hidden" name="user_id" id="deleteUserId" value="">
                    <p class="mb-0">Tem certeza que deseja remover este contrato:
                        <strong id="deleteContractName"></strong>?</p>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-danger" form="deleteContractForm" id="confirmDeleteButton">
                    <span class="spinner-border spinner-border-sm d-none me-2" role="status" aria-hidden="true"></span>
                    <span class="button-text">Sim</span>
                </button>
            </div>
        </div>
    </div>
    
</div>


